{
  "root": true,
  "extends": ["standard"],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "require-jsdoc": "off",
    "no-undef": "error",
    "new-cap": [
      "error",
      {
        "newIsCap": false,
        "capIsNew": false
      }
    ]
  }
}
